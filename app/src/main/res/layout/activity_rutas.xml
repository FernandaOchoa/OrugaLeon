<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fernandaochoa.oruga2.RutasActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="162dp"
        android:layout_height="203dp"
        android:id="@+id/logo_leon_rutas"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/logoleon"
        android:contentDescription="@string/logo_leon_rutas" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:id="@+id/lst_rutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"></ListView>



</LinearLayout>
